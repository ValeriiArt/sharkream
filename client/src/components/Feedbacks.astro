---
import { feedbacksArray } from "./feedbacks-part/components/components";
import { FeedbacksPart } from "./feedbacks-part/feedbacks-part";
---

<section id="feedbacks" class="feedbacks">
 <div class="container">
  <div class="feedbacks-wrapper">
   <div class="title-wrapper">
    <h2 class="title">Відгуки</h2>
   </div>
   <FeedbacksPart client:load feedbacks={feedbacksArray} />
  </div>
 </div>
</section>

<style lang="scss">
 @import "../styles/variables.scss";
 @import "../styles/media-queries.scss";

 .feedbacks {
  margin-top: 72px;
 }
 .feedbacks-wrapper {
  display: flex;
  flex-direction: column;
  @include media-min(lg) {
   grid-gap: 32px;
  }
 }

 .title-wrapper {
  width: 100%;
  height: 124px;
  display: flex;
  margin-left: -70px;
  background-image: url(../../public/images/gallery.svg);
  background-size: contain;
  background-repeat: no-repeat;
  @include media-max(lg) {
   height: 70px;
   margin-left: -40px;
  }
 }
 .title {
  margin-top: 20px;
  margin-left: 70px;
  @include media-max(lg) {
   margin-top: 10px;
   margin-left: 40px;
  }
 }

 @include media-max(xs) {
  .feedbacks {
   margin-top: 32px;
  }

  .feedbacks-wrapper {
   grid-gap: 24px;
  }

  .title-wrapper {
   justify-content: center;
   margin-left: 0;
   background-position: center;
  }

  .title {
   margin-top: 10px;
   margin-left: 0;
  }
 }
</style>
