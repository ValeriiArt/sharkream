---
import GalleryPart from "./gallery-part/gallery-part";
import { photos } from "./gallery-part/mockData";
---

<section id="gallery" class="gallery">
    <div class="container">
        <div class="gallery-wrapper">
            <div class="title-wrapper">
                <h2 class="title">Галерея</h2>
            </div>
            <GalleryPart client:load photos={photos} />
        </div>
    </div>
</section>

<style lang="scss">
    @import "../styles/variables.scss";
    @import "../styles/media-queries.scss";

    .gallery {
        margin-top: 72px;
    }
    .gallery-wrapper {
        display: flex;
        flex-direction: column;
        grid-gap: 32px;
    }

    .title-wrapper {
        width: 100%;
        height: 124px;
        display: flex;
        margin-left: -70px;
        background-image: url(/images/gallery.webp);
        background-size: contain;
        background-repeat: no-repeat;
        @include media-max(lg) {
            height: 70px;
            margin-left: -50px;
        }
    }
    .title {
        margin-top: 20px;
        margin-left: 70px;
        @include media-max(lg) {
            margin-top: 10px;
            margin-left: 50px;
        }
    }

    @include media-max(xs) {
        .gallery {
            margin-top: 32px;
            &::after {
                content: "";
                display: block;
                width: fit-content;
                width: 60%;
                margin: 40px auto 0;
                border-bottom: 1px $accent-1 solid;
            }
        }

        .gallery-wrapper {
            grid-gap: 24px;
        }

        .title-wrapper {
            justify-content: center;
            margin-left: 0;
            background-position: center;
        }

        .title {
            margin-top: 10px;
            margin-left: 0;
        }
    }
</style>
