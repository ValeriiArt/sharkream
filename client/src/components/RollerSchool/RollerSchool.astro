---
import rollerImg1 from "/public/images/roller-school/roller-1.webp";
import rollerImg2 from "/public/images/roller-school/roller-2.webp";

import RollerSchoolCard from "./RollerSchoolCard.astro";
import { locations } from "./mockData";
---

<section class="roller-school">
 <div class="container">
  <div class="title-wrapper">
   <h2 class="title">Роллер-школа <span>Shark Team</span></h2>
  </div>
  <div class="content-wrapper">
   <div class="training">
    <p>
     Запис на тренування онлайн чи дзвінок по телефону <a
      class="call-link"
      href="tel:+380677771024"
      type="tel">+38(067)777-10-24</a
     >
    </p>
    <div class="thumb-wrapper">
     <div class="thumb">
      <img src={rollerImg1} alt="Shark Team" />
      <p><strong>Індивідуальні тренування</strong></p>
     </div>
     <div class="thumb">
      <img src={rollerImg2} alt="Shark Team" />
      <p><strong>Групові тренування</strong></p>
     </div>
    </div>
    <div class="description">
     <p>
      Для запису на групові тренування запрошуємо спочатку на індивідуальне, щоб
      визначити ваш рівень катання.
     </p>
    </div>
    <div class="btn-wrapper">
     <a class="roller-school-btn" href="/#contacts">Записатися на тренування</a>
    </div>
   </div>
   <div class="locaton-wrapper">
    <div>
     <p>Де ми тренуєсомь</p>
    </div>
    <div class="location-list">
     {
      locations.map((location, index) => (
       <RollerSchoolCard
        key={index}
        name={location.name}
        srcImage={location.srcImage}
        src={location.srcLocation}
       />
      ))
     }
    </div>
   </div>
  </div>
 </div>
</section>

<style lang="scss">
 @import "../../styles/variables.scss";
 @import "../../styles/media-queries.scss";

 .roller-school {
  margin-top: 40px;
 }

 .title {
  margin-left: 0;
  color: $text-black-500;
  & span {
   color: $accent-1;
  }
 }

 .content-wrapper {
  margin-top: 32px;
  & p {
   margin-top: 24px;
  }
 }
 .call-link {
  position: relative;
  font-weight: 700;
  color: $accent-3;
  background-color: transparent;

  &:hover {
   color: $accent-1;
   transition: color 0.2s ease-in-out;
  }
  &::after {
   content: "";
   position: absolute;
   bottom: -2px;
   left: 0;
   width: 100%;
   height: 2px;
   background: $accent-gradient;
   transform: scaleX(0);
   transition: transform 0.2s ease-in-out;
  }
  &:hover::after {
   transform: scaleX(1);
  }
 }

 .thumb-wrapper {
  display: grid;
  grid-template-rows: 1fr;
  justify-content: center;
  gap: 30px;
  margin-top: 24px;
  grid-template-columns: minmax(320px, 540px);

  @include media-min(sm) {
   grid-template-columns: repeat(2, minmax(170px, 320px));
  }

  @include media-min(md) {
   grid-template-columns: repeat(2, minmax(328px, 540px));
   gap: 24px;
  }
 }

 .thumb {
  & img {
   max-width: 100%;
   width: 540px;
   height: 240px;
   border: 2px solid $accent-1;
   border-radius: 16px;
   object-fit: cover;
   @include media-min(lg) {
    height: 420px;
   }
  }
  & p {
   margin-top: 16px;
  }
 }

 .btn-wrapper {
  display: flex;
  justify-content: center;
  margin-top: 24px;
 }

 .roller-school-btn {
  display: block;
  padding: 24px 40px;
  font-family: "Merriweather";
  font-style: normal;
  font-weight: 700;
  font-size: 24px;
  line-height: 1.25;
  letter-spacing: -0.005em;
  background: $accent-1;
  color: $text-white-100;
  border-radius: 16px;
  transition: background 250ms cubic-bezier(0.4, 0, 0.2, 1),
   color 250ms cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  &:is(:hover, :focus-within, :active) {
   color: $text-black-600;
   background: $accent-2;
  }
  @include media-max(xs) {
   padding: 20px 32px;
   font-size: 18px;
   line-height: 1.2;
  }
 }

 .location-list {
  display: grid;
  grid-template-rows: 1fr;
  grid-template-columns: minmax(320px, 540px);
  justify-content: center;
  gap: 20px;
  margin-top: 24px;

  @include media-min(sm) {
   grid-template-columns: repeat(2, minmax(170px, 350px));
   gap: 30px;
  }

  @include media-min(md) {
   grid-template-columns: repeat(3, minmax(210px, 350px));
   gap: 30px;
  }
 }
</style>
