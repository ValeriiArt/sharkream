---
import Fonts from "../components/common/Fonts.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="uk">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta
            name="description"
            content="Ми спортивна школа Shark Team.
Наше дружне ком‘юніті завжди знайде підхід до учнів будь якого віку. Досвідчені тренери готові передати свій багаторічний досвід. Роллер школа №1 в Україні."
        />
        <meta
            name="keywords"
            content="Ролики, Роллер школа, ролики, ролики солом'янський район, ролики шевченківський район, шарктім, sharkteam roller school, Роллер школа №1 в Україні. скейт, скейтборд"
        />
        <meta
            property="og:title"
            content="Ми спортивна школа Shark Team.
Наше дружне ком‘юніті завжди знайде підхід до учнів будь якого віку. Досвідчені тренери готові передати свій багаторічний досвід. Роллер школа №1 в Україні."
        />
        <meta property="og:image" content="/logo.webp" aria-setsize="64px" />
        <meta property="og:url" content="https://sharkteam.com.ua/" />
        <meta
            property="og:description"
            content="Ми спортивна школа Shark Team.
Наше дружне ком‘юніті завжди знайде підхід до учнів будь якого віку. Досвідчені тренери готові передати свій багаторічний досвід. Роллер школа №1 в Україні."
        />
        <meta property="og:type" content="article" />
        <link rel="icon" type="image/svg+xml" href="/logo.webp" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <Header />
        <slot />
        <Footer />
        <Fonts />
        <style lang="scss" is:global>
            @import "../styles/variables.scss";
            @import "../styles/media-queries.scss";
            // Global styles
            *,
            *::before,
            *::after {
                box-sizing: border-box;
            }

            * {
                margin: 0;
            }

            body {
                height: 100%;
                display: flex;
                flex-direction: column;
                min-width: 320px;
                min-height: 100vh;
                background-color: $background-body;
                scroll-behavior: smooth;
                font-size: 20px;
                line-height: 1.2;
                -webkit-font-smoothing: antialiased;
                font-family: "Montserrat Alternates";
                font-style: normal;
                font-weight: 400;
                color: $text-black-600;
                overflow: overlay;
                @include media-min(lg) {
                    font-size: 24px;
                }
            }

            img,
            picture,
            video,
            canvas,
            svg {
                display: block;
                height: auto;
                line-height: 0;
            }

            input,
            button,
            textarea,
            select {
                font: inherit;
            }

            p,
            h1,
            h2,
            h3,
            ul {
                margin-top: 0;
                margin-bottom: 0;
                overflow-wrap: break-word;
            }

            ul {
                list-style-type: none;
                padding-left: 0;
                font-size: 0;
            }

            a {
                // display: block;
                text-decoration: none;
            }

            p {
                font-style: normal;
                font-weight: 400;
                color: $black;
            }

            address {
                font-style: normal;
            }

            .container {
                max-width: 680px;
                max-width: 1146px;
                margin: 0 auto;
                padding: 0 24px;
                @include media-min(lg) {
                    padding: 0 16px;
                }
            }

            .title {
                margin-top: 10px;
                margin-left: 34px;
                font-family: "Merriweather";
                font-style: normal;
                font-weight: 700;
                font-size: 48px;
                line-height: 1.25;
                color: $text-white-100;
                @include media-max(lg) {
                    font-size: 24px;
                    line-height: 1.2;
                }
            }
        </style>
    </body>
</html>

<script>
    window.addEventListener("scroll", function () {
        const header = document.getElementById("main-header");
        const scrolled = window.scrollY > 50;
        header?.classList.toggle("scrolled", scrolled);
    });

    const menuItem = document.querySelectorAll(".menu__item");
    const menuBtn = document.querySelector(".button");
    const menu = document.querySelector(".menu");

    menuBtn?.addEventListener("click", function () {
        menuBtn.classList.toggle("hide");
        menu?.classList.toggle("hide");
    });

    menuItem.forEach(function (item) {
        item.addEventListener("click", function () {
            menuBtn?.classList.toggle("hide");
            menu?.classList.toggle("hide");
        });
    });

    const hero = document.querySelector<HTMLElement>(".hero");

    const updateSize = () => {
        const width = window.innerWidth;
        if (width < 1024 && hero) {
            hero.style.backgroundPosition = `calc(100% - (100vw - ${width}px) / 2) 0`;
        }
        if (width >= 1024 && hero) {
            hero.style.backgroundPosition = "";
        }
    };
    window.addEventListener("resize", updateSize);
    window.addEventListener("orientationchange", updateSize);
</script>
